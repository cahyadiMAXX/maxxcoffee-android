                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/card_info_gradient"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                    android:id="@+id/name_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="Card #1"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="left"
                                        android:singleLine="true"
                                        android:text="Balance"
                                        android:textColor="@color/green"
                                        android:textSize="14sp" />

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                        android:id="@+id/balance_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="right"
                                        android:singleLine="true"
                                        android:text="100000"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="left"
                                        android:singleLine="true"
                                        android:text="Beans"
                                        android:textColor="@color/green"
                                        android:textSize="14sp" />

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                        android:id="@+id/point_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="right"
                                        android:singleLine="true"
                                        android:text="25"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:orientation="vertical" />
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/checkbox_card_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/card_3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_no_image" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/card_info_gradient"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                    android:id="@+id/name_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="Card #1"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="left"
                                        android:singleLine="true"
                                        android:text="Balance"
                                        android:textColor="@color/green"
                                        android:textSize="14sp" />

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                        android:id="@+id/balance_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="right"
                                        android:singleLine="true"
                                        android:text="100000"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="left"
                                        android:singleLine="true"
                                        android:text="Beans"
                                        android:textColor="@color/green"
                                        android:textSize="14sp" />

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                        android:id="@+id/point_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:ellipsize="end"
                                        android:gravity="right"
                                        android:singleLine="true"
                                        android:text="25"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:orientation="vertical" />
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <com.maxxcoffee.mobile.widget.button.ButtonLatoRegular
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/button_selector"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>