<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                    android:id="@+id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="You only have 1 card"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <LinearLayout
                    android:id="@+id/transfer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/source_layout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/arrow_down"
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_down_black" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:id="@+id/label_from"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:text="From"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="16sp" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:id="@+id/card_name_source"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/arrow_down"
                            android:layout_toRightOf="@id/label_from"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:id="@+id/image_card_source"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_no_image" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@id/image_card_source"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Balance"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text=":"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:id="@+id/balance_source"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Beans"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text=":"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:id="@+id/beans_source"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Exp. Date"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text=":"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:id="@+id/exp_date_source"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/target_layout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/arrow_down_target"
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_down_black" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:id="@+id/label_from_target"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:text="To"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="16sp" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:id="@+id/card_name_target"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/arrow_down_target"
                            android:layout_toRightOf="@id/label_from_target"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp">

                        <ImageView
                            android:id="@+id/image_card_target"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_no_image" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@id/image_card_target"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Balance"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text=":"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:id="@+id/balance_target"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Beans"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text=":"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:id="@+id/beans_target"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text="Exp. Date"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:text=":"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                    android:id="@+id/exp_date_target"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:background="@android:color/transparent"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:visibility="gone">

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:text="Balance Transfer"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp">

                            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical"
                                android:paddingBottom="16dp"
                                android:paddingTop="16dp"
                                android:text="IDR"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <com.maxxcoffee.mobile.widget.edittext.EditTextLatoRegular
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:background="@color/gray"
                                android:gravity="center_vertical"
                                android:inputType="numberSigned"
                                android:padding="16dp"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.maxxcoffee.mobile.widget.button.ButtonLatoRegular
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/button_selector"
                        android:text="Submit"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>