                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginRight="16dp"
                                    android:src="@drawable/ic_user" />

                                <ImageView
                                    android:id="@+id/arrow_profile"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="16dp"
                                    android:src="@drawable/ic_arrow_down_white"
                                    android:visibility="gone" />

                                <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@id/arrow_profile"
                                    android:layout_toRightOf="@id/icon_profile"
                                    android:text="Sign Up"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white_transparent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black_transparent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="16dp">

                                <RelativeLayout
                                    android:id="@+id/login_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true">

                                    <ImageView
                                        android:id="@+id/icon_login"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginRight="16dp"
                                        android:src="@drawable/ic_signout" />

                                    <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@id/icon_login"
                                        android:text="Login"
                                        android:textColor="@android:color/white"
                                        android:textSize="16sp" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white_transparent" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tutorial_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/arrow_white" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
