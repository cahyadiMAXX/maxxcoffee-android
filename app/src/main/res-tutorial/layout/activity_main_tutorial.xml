                        android:id="@+id/layout_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_home"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_home" />

                        <ImageView
                            android:id="@+id/arrow_home"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_arrow_down_white"
                            android:visibility="invisible" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/arrow_home"
                            android:layout_toRightOf="@id/icon_home"
                            android:text="Home"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_transparent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_transparent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_browse"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_coffee_white" />

                        <ImageView
                            android:id="@+id/arrow_browse"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_arrow_down_white" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/arrow_browse"
                            android:layout_toRightOf="@id/icon_browse"
                            android:text="Browse"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_transparent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_transparent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_card"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_creditcard" />

                        <ImageView
                            android:id="@+id/arrow_card"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_arrow_down_white" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
