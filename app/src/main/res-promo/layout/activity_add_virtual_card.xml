<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background_cream"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_back" />

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Get Virtual Card"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Please note the following :"
                    android:id="@+id/textView4"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="7dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="1. "
                            android:id="@+id/textView5"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="14sp" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Virtual Card is not a real physical card, but it has all the same purpose as a regular MAXX COFFEE World Card."
                            android:id="@+id/textView6"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="2. "
                            android:id="@+id/textView7"
                            android:textSize="14sp"
                            android:textColor="@android:color/primary_text_light" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="You could use your Virtual Card using Android / iOS Mobile Application only."
                            android:id="@+id/textView8"
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/primary_text_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="3. "
                            android:id="@+id/textView9"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="14sp" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="You could top-up your Virtual Card Balance."
                            android:id="@+id/textView10"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="4. "
                            android:id="@+id/textView11"
                            android:textSize="14sp"
                            android:textColor="@android:color/primary_text_light" />

                        <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="You could collect Beans."
                            android:id="@+id/textView12"
                            android:layout_marginLeft="5dp"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/virtual_description"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="10dp" /-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/virtual_card" />

            </LinearLayout>

            <com.maxxcoffee.mobile.widget.button.ButtonLatoRegular
                android:id="@+id/addVirtualCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="GET Virtual Card"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp" />

            <!--<com.journeyapps.barcodescanner.DecoratedBarcodeView-->
            <!--android:id="@+id/zxing_barcode_scanner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"-->
            <!--app:zxing_framing_rect_height="100dp"-->
            <!--app:zxing_framing_rect_width="250dp"-->
            <!--app:zxing_scanner_layout="@layout/custom_barcode_scanner" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>