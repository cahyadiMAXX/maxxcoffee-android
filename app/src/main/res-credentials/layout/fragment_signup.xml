<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <!--com.maxxcoffee.mobile.widget.textview.TextViewLatoBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:textSize="20sp" /-->

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="First Name"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.edittext.EditTextLatoRegular
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white_transparent"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Last Name"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.edittext.EditTextLatoRegular
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white_transparent"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.edittext.EditTextLatoRegular
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white_transparent"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Mobile Phone"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <com.maxxcoffee.mobile.widget.edittext.EditTextLatoRegular
                    android:id="@+id/phoneindo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white_transparent"
                    android:inputType="number"
                    android:padding="16dp"
                    android:focusable="false"
                    android:text="+62"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="0.8"
                    android:layout_marginRight="3dp"/>

                <com.maxxcoffee.mobile.widget.edittext.EditTextLatoRegular
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white_transparent"
                    android:inputType="number"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_weight="0.2"/>
            </LinearLayout>

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.edittext.EditTextShowPassword
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white_transparent"
                android:inputType="textPassword"
                android:padding="16dp"
                android:singleLine="true"
                app:tint_color="@color/gray"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <com.maxxcoffee.mobile.widget.textview.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirm Password"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


            <com.maxxcoffee.mobile.widget.edittext.EditTextShowPassword
                android:id="@+id/password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white_transparent"
                android:inputType="textPassword"
                android:padding="16dp"
                android:singleLine="true"
                app:tint_color="@color/gray"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                />

            <com.maxxcoffee.mobile.widget.button.ButtonLatoRegular
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_selector"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>